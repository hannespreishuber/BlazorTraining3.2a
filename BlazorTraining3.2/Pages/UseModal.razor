@page "/modal"
<h3>UseModal</h3>
<button @onclick="show">modal</button> 
<MyModal @ref="modal1" Title="mein toller Dialog">
    <ChildContent>
        <p>Füllen das Zeugs aus</p>
        <input @bind="MyProperty" />
    </ChildContent>
 
    <ButtonContent>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" @onclick="show">Save changes</button>
    </ButtonContent>
</MyModal>


@code {
    public int MyProperty { get; set; }
    MyModal modal1;

    void show()
    {
        modal1.Show();
    }
}
